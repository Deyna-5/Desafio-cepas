<% if current_user.admin == true%>
       <div class="jumbotron">
              <h1 class="text-center mb-5">Registro de cata de vinos</h1>
              <div class="container">
                     <%= form_with(model: @wine, local: true) do |f| %>
                            <div class="my-3">
                                   <%= f.label :name %> <br>
                                   <%= f.text_field :name %>
                            </div>
                            <%if @strains.count > 0 %>
                                   <p class="my-3">Solo ingresa los porcentajes de los campos seleccionados</p>
                                   <% @strains.each do |strain|%>
                                          <div>
                                                 <%= check_box(:wine, :strain_ids, {multiple: true}, strain.id, nil) %>
                                                 <span> <%= strain.name %> </span>
                                          </div>
                                          <div class="ml-5 mb-3">
                                                 <p class="d-inline">%</p>
                                                 <input
                                                        type="number"
                                                        name="wine[strain_percent][]"
                                                        id="wine_strain_percent_<%= strain.id %>"
                                                        min="0"
                                                        max="100"
                                                        step="5"
                                                 >
                                          </div>
                                   <%end%>
                            <%else%>
                                   <h5>No hay cepas disponibles</h5>
                            <%end%>
                            <div class="my-3">
                                   <%= f.submit %>
                            </div>
                     <%end%>
              </div>
              <%= link_to "Agrear un nuevo enologo", new_oenologist_path %>
       </div>
<%end%>

<div class="container">
       <h2 class="text-center my-5">Tabla de vinos</h2>
       <table class="table">
              <thead class="thead-light">
                     <th>Nombre</th>
                     <th>Cepa | porcentaje </th>
                     <th> Nota del enologo </th>
                     <th> Accesos </th>
              </thead>
              <tbody>
                     <% @wines.each do |wine|%>
                            <tr>
                                   <td> <%= wine.name %> </td>
                                   <td>
                                          <ul>
                                          <% wine.wine_strains.each do |wine_strain| %>
                                                 <li><%= wine_strain.strain.name %> (<%= wine_strain.percent %>%) </li>
                                          <%end%>
                                          </ul>
                                   </td>
                                   <td>
                                          <ul>
                                                 <% wine.wine_oenologists.each do |wine_oenologist| %>
                                                        <li> Nombre: <%= wine_oenologist.name %> Puntaje: <%= wine_oenologist.score %> </li>
                                                 <%end%>
                                          </ul>
                                   </td>
                                   <td>
                                          <%= link_to "Editar vino", edit_wine_path(wine.id) %>
                                   </td>
                            </tr>
                     <%end%>
              </tbody>
       </table>
</div>